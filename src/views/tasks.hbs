<h3 class="text-center my-4">List Tasks</h3>
<table class="table">
  <thead>
    <tr>     
      <th scope="col">Task Name</th>
      <th scope="col">Description</th>
      <th scope="col">Status</th>
      <th scope="col">Edit</th>
      <th scope="col">remove</th>
    </tr>
  </thead>
  <tbody>
    {{#each tasks}}
      <tr>        
        <td>{{title}}</td>
        <td>{{description}}</td>   
        <td>
          <div>
            <form action="/tasks/status/{{_id}}" method="POST">
              {{#if status}}
                <input class="form-check-input mt-2 mx-1" type="checkbox" id="{{_id}}" name="statuscheck" onChange="this.form.submit()" aria-label="..." checked >
                <span class="badge rounded-pill bg-success">Finished</span>
              {{else}}
                <input class="form-check-input mt-2 mx-1" type="checkbox" id="{{_id}}" name="statuscheck" onChange="this.form.submit()" aria-label="...">
                <span class="badge rounded-pill bg-danger">Pending</span>
              {{/if}}  
            </form>
          </div>  
        </td>     
        <td><a class="text-secondary" href="/tasks/edit/{{_id}}"><i class="fas fa-edit""></i> </a></td> 
        <td><a class="text-danger" href="/tasks/delete/{{_id}}?_method=DELETE"><i class="fas fa-trash-alt"></i> </a></td>       
      </tr>
    {{/each}} 
    </tbody>
